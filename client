import clientFunc
from socket import *


# Constant Var for N
DEFAULT_N = 15

# Establish socket connection
serverName = 'localhost'
serverPort = 7257
clientSocket = socket(AF_INET, SOCK_STREAM)
clientSocket.connect((serverName, serverPort))

# main function
def main():
    while(1):
        cmd = input("client >> ")

        if cmd == "help":
            clientFunc.printHelp()
        elif cmd == "ag":
            clientFunc.ag()
        elif cmd == "sg":
            clientFunc.sg()
        elif cmd == "rg":
            clientFunc.rg()
        elif cmd == "logout":
            clientFunc.logout(clientSocket)
        else:
            print("Invalid Command")
            clientFunc.printHelp()

# run main
if(__name__ == "__main__"):
    main()
